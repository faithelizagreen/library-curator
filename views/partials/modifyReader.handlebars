<div class="container">
   <div class="row">
      <div class="card col mt-2 mb-4 p-0" style="max-width: 33%;">
         <div class="signup-card m-4">
            <form class="form" id="signup-form">
               <div class="form-group mt-4">
                  <label for="name-signup">Name:</label><br>
                  <input class="form-input w-100" type="text" id="name-signup" />
               </div>
               <div class="form-group mt-2">
                  <label for="email-signup">Email:</label><br>
                  <input class="form-input w-100" type="email" id="email-signup" />
               </div>
               <div class="form-group">
                  <div class="dropdown">
                     <button class="btn btn-secondary mt-4 mb-4 w-100 dropdown-toggle" type="button"
                        id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Select
                     </button>
                     <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Check In</a>
                        <a class="dropdown-item" href="#">Check Out</a>
                     </div>
                  </div>
            </form>
         </div>
      </div>
   </div>
   <div class="col m-2">
      <div class="row">
         <div class="col p-0">
            <input class="form-control" type="search" id="bookInput" placeholder="Search Book Title" aria-label="Search" aria-describedby="search-addon"/>
         </div>
         <div class="col p-0">
            <button class="btn btn-light" type="button" data-toggle="modal" data-target="#addBook" id="addBtn">Add
               Book</button>
         </div>
      </div>
   </div>